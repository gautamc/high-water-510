<h2><%= t(:sign_up) %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label t(:name) %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label t(:email) %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label t(:password) %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label t(:password_confirmation) %><br />
  <%= f.password_field :password_confirmation %></p>
 
  <p><%= f.label t(:site_name) %><br />
  <%= text_field_tag "[user][site_attributes][name]", resource.site.name %></p>

  <p><%= f.label t(:site_url) %><br />
  <%= text_field_tag "[user][site_attributes][url]", resource.site.url %></p>

  <p><%= f.label t(:telephone) %><br />
  <%= f.text_field :telephone %></p>

  <p><%= f.submit t(:sign_up) %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
